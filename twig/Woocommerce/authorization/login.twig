{# User login form #}

<div class="container-fluid py-sm-5 my-sm-5 my-5 p-xs-0">
    <div class="row py-sm-5 my-sm-5 m-xs-0 p-xs-0">
        <div class="col-md-6">
            <div class="mb-4">
                <h2> {{ content.title }} </h2>
                <p> {{ content.description }} </p>
            </div>
            <form role="form" id="loginForm" @submit.prevent="submit">
                <div class="mb-4">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" id="login" name="login" placeholder="Your Login" v-model="login"/>
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Your Password" v-model="password"/>
                    </div>
                    <div v-if="message.text != false" v-html="message.text">
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" v-model="remember"/> Check me out
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit">
                        Log in
                    </button>
                    <a href="{{ url.registration }}" class="ml-3">Register</a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img alt="Bootstrap Image Preview" src="{{ source }}/img/forms/login-gray.jpg" width="100%" height="auto" loading="lazy"/>
        </div>
    </div>
</div>