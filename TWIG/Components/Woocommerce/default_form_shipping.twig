{% if enabled %}
<div class="woocommerce-shipping-fields">

    <h3 id="ship-to-different-address">
        <label class="woocommerce-form__label woocommerce-form__label-for-checkbox checkbox">
            <input id="ship-to-different-address-checkbox" class="woocommerce-form__input woocommerce-form__input-checkbox input-checkbox" type="checkbox" name="ship_to_different_address" value="1" /> <span><?php esc_html_e( 'Ship to a different address?', 'Woocommerce' ); ?></span>
        </label>
    </h3>

    <div class="shipping_address">

        {{ wp.do_action('woocommerce_before_checkout_shipping_form', checkout) }}

        {% for key, field in form %}

            <div>

                <div class="mb-3">

                    {{ Component('default_field', {
                        key: key,
                        field: field,
                        value: checkout.get_value(key),
                        attr: {
                            input_class: 'w-100'
                        }
                    }) }}

                </div>

            </div>

        {% endfor %}

        {{ wp.do_action('woocommerce_after_checkout_shipping_form', checkout) }}

    </div>

</div>
{% endif %}

{{ wp.do_action('woocommerce_before_order_notes', checkout) }}

{% if enable_order_comments %}

{#    {% if needs_shipping %}#}
{#        <h4>Additional information</h4>#}
{#    {% endif %}#}

    {% for key, field in order %}

        <div class="mb-3">

            {{ Component('default_field', {
                key: key,
                field: field,
                value: checkout.get_value(key),
                attr: {
                    input_class: 'w-100'
                }
            }) }}

        </div>

    {% endfor %}


{% endif %}

{{ wp.do_action('woocommerce_after_order_notes', checkout) }}