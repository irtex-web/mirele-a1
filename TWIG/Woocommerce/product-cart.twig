<div class="col-sm-{{ grid.columns }} col-xs-12">
    <div class="card" itemscope itemtype="http://schema.org/Product" id="product">
        <a itemprop="image"
           href="{{ product.get_image_src is empty ? product.get_placeholder_src : product.get_image_src }}">
            <img class="card-img-top"
                 src="{{ product.get_image_src is empty ? product.get_placeholder_src : product.get_image_src }}"
                 title="{{ product.name }}" alt="{{ product.name }}">
        </a>

        <div class="card-body">
            <h1 class="card-title" itemprop="name">{{ product.name }}</h1>
            <p class="card-text" itemprop="description">{{ product.description }}</p>
            <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                <span itemprop="price"> {{ product.get_price }} </span>
                <a href="{{ product.get_permalink }}" class="btn">Buy</a>
            </div>
        </div>
    </div>
</div>

