{# User registration form #}

<div class="container-fluid py-sm-5 my-sm-5 my-5 p-xs-0">
    <div class="row py-sm-5 my-sm-5 m-xs-0 p-xs-0">
        <div class="col-md-6">
            <div class="mb-4">
                <h2>{{ content.title }}</h2>
                <p> {{ content.description }} </p>
            </div>
            <form role="form" id="signupForm" @submit.prevent="submit">
                <div class="mb-4">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" id="login" name="login" placeholder="Your Login"
                               v-model="login"/>
                    </div>
                    <div class="form-group mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Your Email"
                               v-model="email"/>
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" class="form-control" id="password" name="password"
                               placeholder="Your Password" v-model="password"/>
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" class="form-control" id="repeat_password" name="repeat_password"
                               placeholder="Repeat Your Password" v-model="password"/>
                    </div>
                    <div v-if="message.text != false" v-html="message.text">
                    </div>
                </div>
                <div>
                    <button type="submit">
                        Sign up
                    </button>
                    <a href="{{ url.login }}" class="ml-3">Login</a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img alt="Bootstrap Image Preview" src="{{ source }}/img/forms/register-gray.jpg" width="100%"/>
        </div>
    </div>
</div>